                    <textarea type="text" id="content" name="content" value="<%= note.content %>" placeholder="Type your thoughts..." required>
                        <%= note.content %>
                    </textarea>
                </div>
                <button type="submit" class="post">Update</button>
                <!-- <a href="/notes">Cancel</a> -->
            </form> 
        </div>
